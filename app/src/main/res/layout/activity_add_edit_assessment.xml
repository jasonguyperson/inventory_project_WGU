<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.AddEditAssessmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_assessment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment title" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/text_view_assessment_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment due date"
            android:padding="8dp"
            android:clickable="true"/>

        <EditText
            android:id="@+id/edit_text_assessment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment status" />

        <EditText
            android:id="@+id/edit_text_assessment_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment note"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/button_share_assessment_note"
            android:text="Share note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#8FC7EC"
            android:layout_marginRight="8dp"/>

        <EditText
            android:id="@+id/edit_text_assessment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assessment type"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>